<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.androidactivists.demo1.MainActivity"
    >

   <!-- <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Output"
        android:id="@+id/outputButon"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:shadowColor="#ff5a5a5a"
        android:nestedScrollingEnabled="false"
        android:elevation="80px"
        android:enabled="true" />

    <TextView
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:id="@+id/outputTextView"
        android:hint="Press button to see output"

        android:layout_marginBottom="40dp"
        android:textSize="22dp"
        android:textIsSelectable="true"
        android:translationZ="20px"
        android:textColorHint="#d6061865"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff485618"
        android:textAlignment="gravity" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:id="@+id/inputTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:textColorHint="#ff485618"
        android:hint="Enter Something"
        android:textSize="22dp"
        android:textColor="#d6061865" />


</RelativeLayout>
